<h2>スケジュール編集</h2>

<%= form_for(@task, url: task_path) do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day ,"開始日" %></th>
      <td><%= f.text_field :start_day %></td>
    </tr>
    <tr>
      <th><%= f.label :end_day ,"終了日" %></th>
      <td><%= f.text_field :end_day %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= check_box_tag :all_day %></td>
      <td><%= label_tag :all_day, " 終日の場合はチェックを入れます。" %></td>
    </tr>
    <tr>
      <th><%= f.label :title ,"スケジュールメモ" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "編集を完了する。" %></li>
      <li><%= link_to "スケジュール情報一覧に戻る", :tasks %></li>
    </ul>
  </div>
<% end %>