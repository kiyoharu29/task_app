<h2>スケジュール新規作成</h2>

<% if flash.alert %>
<p class="alert"><%= flash.alert %></p>
<% end %>

<%= form_for @task do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day ,"開始日" %></th>
      <td><%= f.date_field :start_day %></td>
    </tr>
    <tr>
      <th><%= f.label :end_day ,"終了日" %></th>
      <td><%= f.date_field :end_day %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= f.check_box :all_day %>終日の場合はチェックを入れます</td>
    </tr>
    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_field :memo %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "登録を完了する" %></li>
      <li><%= link_to "スケジュール情報一覧に戻る", :tasks %></li>
    </ul>
  </div>
<% end %>